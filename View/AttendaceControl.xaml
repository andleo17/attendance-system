<UserControl xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="AttendaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800" Background="#FF36393F">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" CornerRadius="100" Width="100" Height="100" Margin="20,0">
            <Border.Background>
                <ImageBrush ImageSource="1ad41039d17f6dd346059c822dd76e4c1555353860_full.png"/>
            </Border.Background>
        </Border>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="18" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center" Foreground="White">
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}, {1}">
                            <Binding Path="Lastname"/>
                            <Binding Path="Name"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Label>
            <Label Grid.Row="1" Grid.Column="0" Content="DNI:" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center" Foreground="White"/>
            <Label Grid.Row="1" Grid.Column="1" Content="{Binding Path=Ca}" VerticalContentAlignment="Center" Foreground="White" Background="{x:Null}" BorderBrush="#FFD5691E" FontSize="14" BorderThickness="5,0.9,1,5" Style="{DynamicResource Rounded}" VerticalAlignment="Center" Margin="0,0,200,0" Padding="5,8"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Nombre:" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center" Foreground="White"/>
            <Label Grid.Row="2" Grid.Column="1" Content="{Binding Path=Name}" VerticalContentAlignment="Center" Foreground="White" Background="{x:Null}" BorderBrush="#FFD5691E" FontSize="14" BorderThickness="5,0.9,1,5" Style="{DynamicResource Rounded}" VerticalAlignment="Center" Margin="0,0,200,0" Padding="5,8"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Hora entrada:" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center" Foreground="White"/>
            <xctk:TimePicker Grid.Row="3" IsEnabled="False" Grid.Column="1"  BorderBrush="#FFD5691E" BorderThickness="5,1,0,5" VerticalAlignment="Center" Margin="0,0,200,0" Foreground="White" FontSize="14" Style="{DynamicResource Rounded}" Format="LongTime" TextAlignment="Center" EndTime="23:59:59" />
            <Label Grid.Row="4" IsEnabled="False" Grid.Column="0" Content="Hora salida:" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center" Foreground="White"/>
            <xctk:TimePicker Grid.Row="4" Grid.Column="1"  BorderBrush="#FFD5691E" BorderThickness="5,1,0,5" VerticalAlignment="Center" Margin="0,0,200,0" Foreground="White" FontSize="14" Style="{DynamicResource Rounded}" Format="LongTime" TextAlignment="Center" EndTime="23:59:59" />
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Background="{x:Null}" Content="df" Grid.Column="1" Grid.RowSpan="2" FontSize="60" Foreground="{x:Null}" />
            <Button Grid.Column="0" Grid.Row="0" Content="Ver" Name="BtnShow" FontSize="16" VerticalAlignment="Center" BorderBrush="{x:Null}" Foreground="White" FontFamily="Segoe UI Semibold">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA35117" Offset="0.49"/>
                        <GradientStop Color="#FFD5691E" Offset="0.518"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Column="0" Grid.Row="1" Content="Modificar" Name="BtnModify" VerticalAlignment="Center" FontSize="16" Foreground="White" BorderBrush="{x:Null}" FontFamily="Segoe UI Semibold">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA35117" Offset="0.49"/>
                        <GradientStop Color="#FFD5691E" Offset="0.518"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</UserControl>
